<h2><%= @book.title %></h2>
<div class="showbooks">
	
		<p><%= image_tag @book.image, :class => 'feature' %></p>
	
		<% if @book.author %>
			<p>Author: <%= link_to @book.author.name, @book.author %></p>
		<% end %>
		<p>Title: <%= @book.title %></p>
		<p>Year: <%= @book.year %></p>
		<p>Genre: <%= @book.genre %></p>

		<div class="controls">
			<li><%= link_to 'Edit', edit_book_path(@book) %></li>
			<li><%= link_to 'Delete', @book, :method => 'delete', :data => { :confirm => 'Are you sure?' } %></li>
		</div>
	
	
</div>
